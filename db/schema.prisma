// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["windows", "rhel-openssl-1.0.x"]
}

// --------------------------------------

model User {
  id             Int      @id @default(autoincrement())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  name           String?
  email          String   @unique
  hashedPassword String?
  role           String   @default("USER")

  tokens   Token[]
  sessions Session[]
}

model Session {
  id                 Int       @id @default(autoincrement())
  createdAt          DateTime  @default(now())
  updatedAt          DateTime  @updatedAt
  expiresAt          DateTime?
  handle             String    @unique
  hashedSessionToken String?
  antiCSRFToken      String?
  publicData         String?
  privateData        String?

  user   User? @relation(fields: [userId], references: [id])
  userId Int?
}

model Token {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  hashedToken String
  type        String
  // See note below about TokenType enum
  // type        TokenType
  expiresAt   DateTime
  sentTo      String

  user   User @relation(fields: [userId], references: [id])
  userId Int

  @@unique([hashedToken, type])
}

// NOTE: It's highly recommended to use an enum for the token type
//       but enums only work in Postgres.
//       See: https://blitzjs.com/docs/database-overview#switch-to-postgre-sql
// enum TokenType {
//   RESET_PASSWORD
// }

model Category {
  id          Int      @id @default(autoincrement())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  name        String   @unique
  description String
  items       Item[]
}

enum ItemStatus {
  integrating
  enable
  disable
  validate
}

model Item {
  id                  Int                  @id @default(autoincrement())
  createdAt           DateTime             @default(now())
  updatedAt           DateTime             @updatedAt
  name                String               @unique
  description         String
  category            Category             @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId          Int
  files               ItemFile[]
  itemIntegration     ItemIntegration[]
  itemIntegrationLogs ItemIntegrationLog[]
  status              ItemStatus           @default(disable)
  setup               IntegrationSetup?    @relation(fields: [setupId], references: [id])
  setupId             Int?
  integrationUrl      String?
  dificulty           Int?
  assemblyTime        Decimal?
  author              String?
  authorLink          String?
  licenseType         String?
  licenseTypeLink     String?
}

enum FileType {
  instruction
  preview
  scheme
}

model ItemFile {
  id           Int      @id @default(autoincrement())
  storagePath  String   @unique
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  artifactType FileType
  mainPreview  Boolean  @default(false)
  item         Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId       Int
}

enum UrlIntegrationStatus {
  readingPending
  readingDone
  simulationPending
  simulationDone
  pending
  done
}

enum ItemIntegrationStatus {
  pending
  pendingFiles
  running
  done
  error
  pendingSimulation
  runningSimulation
  simulated
}

model IntegrationSetup {
  id                    Int               @id @default(autoincrement())
  name                  String
  key                   String
  domain                String
  itemUrlSelector       String
  categorySelector      String
  categoryBinding       String
  descriptionSelector   String?
  previewImagesSelector String
  schemesSelector       String
  ignoreExpressions     String?
  integrationItems      ItemIntegration[]
  items                 Item[]
  urlIntegrations       UrlIntegration[]
  author                String?
  authorLink            String?
  licenseType           String?
  licenseTypeLink       String?
  createdAt             DateTime          @default(now())
  updatedAt             DateTime          @updatedAt
}

model UrlIntegration {
  id        Int                  @id @default(autoincrement())
  url       String               @unique
  status    UrlIntegrationStatus
  setup     IntegrationSetup     @relation(fields: [setupId], references: [id])
  setupId   Int
  createdAt DateTime             @default(now())
  updatedAt DateTime             @updatedAt
}

model ItemIntegration {
  id               Int                   @id @default(autoincrement())
  name             String
  url              String                @unique
  status           ItemIntegrationStatus
  fileIntegrations FileIntegration[]
  logs             IntegrationLog[]
  createdAt        DateTime              @default(now())
  updatedAt        DateTime              @updatedAt
  setup            IntegrationSetup      @relation(fields: [setupId], references: [id])
  setupId          Int
  categoryId       Int
  itemId           Int?
  item             Item?                 @relation(fields: [itemId], references: [id])
  error            String?
}

enum FileIntegrationStatus {
  pending
  running
  done
  error
  pendingSimulation
  runningSimulation
  simulated
}

model FileIntegration {
  id                Int                   @id @default(autoincrement())
  itemIntegrationId Int
  itemIntegration   ItemIntegration       @relation(fields: [itemIntegrationId], references: [id], onDelete: Cascade)
  selector          String
  url               String                @unique
  status            FileIntegrationStatus
  integrationType   FileType
  createdAt         DateTime              @default(now())
  updatedAt         DateTime              @updatedAt
  error             String?
}

model IntegrationLog {
  id            Int              @id @default(autoincrement())
  integration   ItemIntegration? @relation(fields: [integrationId], references: [id], onDelete: Cascade)
  integrationId Int?
  key           String
  reference     String
  value         String
  createdAt     DateTime         @default(now())
  updatedAt     DateTime         @updatedAt
  error         String?
}

model ItemIntegrationLog {
  id         Int      @id @default(autoincrement())
  key        String
  message    String
  item       Item     @relation(fields: [itemId], references: [id], onDelete: Cascade)
  itemId     Int
  itemName   String
  url        String?
  errorStack String?
  createdAt  DateTime @default(now())
}

model SystemParameter {
  id    Int    @id @default(autoincrement())
  key   String @unique
  value String
}
